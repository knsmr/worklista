!!! 5
%html
  
  %head
    %title
      = "Worklista - #{yield :title}"
    %link{:rel => 'shortcut icon', :href => '/favicon.ico'}
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '//fonts.googleapis.com/css?family=Carter+One'}
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application'
    = stylesheet_link_tag 'jquery-ui'
    = yield :feed
    = javascript_include_tag :defaults
    = javascript_include_tag "http://platform.twitter.com/widgets.js"
    = javascript_include_tag "http://b.st-hatena.com/js/bookmark_button.js"
    = csrf_meta_tag
    = yield(:head)
  
  %body
    #container
      #header
        %h1
          - if user_signed_in?
            = link_to 'worklista', "/users/#{current_user.username}"
          - else
            = link_to 'worklista', '/'

        #motto What you publish online is your resume.

        #login
          - if user_signed_in?
            = "Hi, #{current_user.username}! | "
            = link_to 'Setting', '/account'
            |
            = link_to('Logout', '/logout')
          - else
            Sign in with:
            %a{:href => '/auth/facebook/'}
              = image_tag('facebook_32.png', :size => "32x32")
              Facebook
            %a{:href => '/auth/twitter/'}
              = image_tag('twitter_32.png', :size => "32x32")
              Twitter
  
      #menu-navi
        %ul
          %li
            = link_to 'Items', '/items'
          %li
            = link_to 'Users', '/users'
          - if user_signed_in?
            %li
              = link_to 'Me', "/users/#{current_user.username}"
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      = yield

    #fb-root
    :javascript
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) {return;}
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#appId=194914263914113&xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    #footer
      &copy; 2010 Worklista. This service is currently in beta. 
      %a{:href => "https://spreadsheets.google.com/spreadsheet/viewform?hl=en_US&formkey=dFpsWXlrRUw2Q0JzRTRUWm1CWUlXanc6MQ#gid=0"} Feedback. 
      | 
      %a{:href => '/about'} About 
      |
      %a{:href => '/login'} old user login
